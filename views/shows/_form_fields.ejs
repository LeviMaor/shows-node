<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= show.title %>">
</div>
<div>
  <label>Main Actor</label>
  <select name="author">
  <% actors.forEach(actor => { %>
    <% if (actor.id === show.mainActor) { %>
      <option selected label="<%= actor.name %>" value="<%= actor.id %>">
    <% } else { %>
      <option label="<%= actor.name %>" value="<%= actor.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
<div>
  <label>Release Date</label>
  <input type="date" name="releaseDate"
        value="<%= show.releaseDate == null ? '' : show.releaseDate.toISOString().split('T')[0] %>">
</div>
<div>
  <label>Average Run Time</label>
  <input type="number" name="averageRunTime" min="1"
        value="<%= show.averageRunTime %>">
</div>
<div>
  <label>Number Of Seasons</label>
  <input type="number" name="numOfSeasons" min="1"
        value="<%= show.numOfSeasons %>">
</div>
<div>
  <label>Average Number Of Episodes Per Season</label>
  <input type="number" name="averageNumOfEpisodesPerSeason" min="1"
        value="<%= show.averageNumOfEpisodesPerSeason %>">
</div>
<div>
  <label>Cast</label>
  <input type="text" name="cast" value="<%= show.cast %>">
</div>
<div>
  <label>Writers</label>
  <input type="text" name="writers" value="<%= show.writers %>">
</div>

<div>
  <label>Score</label>
  <input type="text" name="score" value="<%= show.score %>">
</div>
<div>
  <label>Cover</label>
  <input type="file" name="cover" class="filepond">
</div>
<div>
  <label>Description</label>
  <textarea name="description"><%= show.description %> </textarea>
</div>
